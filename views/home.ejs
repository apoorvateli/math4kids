<% include partials/header %>
<link rel="stylesheet" href="/css/home-style.css" type="text/css">

<div id="quiz">

  <div class="text-center h1 mt-4" id="heading">
      <!-- <img src="https://s3.ap-south-1.amazonaws.com/math4kids/logo.png" class="img-fluid" alt="Responsive image"> -->
      <img src="https://s3.ap-south-1.amazonaws.com/math4kids/logo-theme.png" class="img-fluid" alt="Responsive image">
      <!-- <img src="/images/logo-theme.png" class="img-fluid" alt="Responsive image"> -->
  </div>

  <div class="row h2 my-3">

      <div class="col-sm" id="level">
        Level: 1
      </div>
      <div class="col-sm" id="score">
        Score: 2/2
      </div>

  </div>

  <div class="progress my-3">
    <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
  </div>

  <div class="container text-center" id="solve">
    <span> 
      <span id="num1">6</span> 
      <!-- <i class="fas fa-futbol" id="icon1"></i> -->
      <span id="icon1"></span>
      <span id="operator">+</span> 
      <span id="num2">4</span> 
      <!-- <i class="fas fa-volleyball-ball" id="icon2"></i> -->
      <span id="icon2"></span> = 
    </span>
    <input type="number" name="answer" autofocus />
  </div>

</div>

